{
    "workshop": {
	"schema": {
	    "version": "2020.03.02"
	}
    },
    "userenvs": [
	{
	    "name": "centos8",
	    "requirements": [
		"dependencies",
		"dumb-init"
	    ]
	}
    ],
    "requirements": [
	{
	    "name": "dependencies",
	    "type": "distro",
	    "distro_info": {
		"packages": [
		    "epel-release",
		    "which",
		    "wget",
		    "python3",
		    "net-tools",
		    "numactl-libs",
		    "libibverbs",
		    "libibverbs-devel",
		    "rdma-core-devel",
		    "libibverbs-utils",
		    "mstflint",
		    "dpdk",
		    "dpdk-tools"
		]
	    }
	},
	{
	    "name": "dumb-init",
	    "type": "manual",
	    "manual_info": {
		"commands": [
		    "wget -O /usr/local/bin/dumb-init https://github.com/Yelp/dumb-init/releases/download/v1.2.2/dumb-init_1.2.2_amd64",
		    "chmod +x /usr/local/bin/dumb-init"
		]
	    }
	}
    ]
}
